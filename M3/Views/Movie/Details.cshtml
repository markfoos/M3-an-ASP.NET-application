@model M3.Models.Movie
@{
    ViewBag.Title = Model.Name;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Customer Details</h2>

<div>
    <dl class="row">
        <dt class="col-sm-3">Movie:</dt>
        <dd class="col-sm-9">@Model.Name</dd>
        <dt class="col-sm-3 text-truncate">Movie ID:</dt>
        <dd class="col-sm-9">@Model.Id</dd>
        <dt class="col-sm-3 text-truncate">Description:</dt>
        <dd class="col-sm-9">@Model.Info</dd>
        <dt class="col-sm-3 text-truncate">Release Date:</dt>
        <dd class="col-sm-9">@Model.ReleaseDate</dd>
        <dt class="col-sm-3 text-truncate">Genre:</dt>
        <dd class="col-sm-9">@Model.Genre.Name</dd>
        <dt class="col-sm-3 text-truncate">DateAdded:</dt>
        <dd class="col-sm-9">@Model.DateAdded</dd>
        <dt class="col-sm-3 text-truncate">In Stock:</dt>
        <dd class="col-sm-9">@Model.InStock</dd>
    </dl>
    </dd>
    </dl>
</div>

